{
  "name": "amber-framework",
  "version": "1.0.0",
  "description": "Backend NodeJS framework structured based on DDD and Clean Architecture concepts",
  "main": "./src/app.js",
  "private": true,
  "engines": {
    "node": ">=7.6.0"
  },
  "scripts": {
    "start": "sls offline -s local",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:features",
    "test:unit": "cross-env NODE_PATH=. NODE_ENV=test mocha --opts test/mocha.opts.unit",
    "test:features": "cross-env NODE_PATH=. NODE_ENV=test mocha --opts test/mocha.opts.features",
    "coverage": "cross-env NODE_PATH=. NODE_ENV=test nyc mocha --opts test/mocha.opts.unit",
    "lint": "eslint {src,test,config}/**/*.js",
    "sequelize": "cross-env NODE_PATH=. sequelize",
    "console": "cross-env NODE_PATH=. node src/interfaces/console/index.js",
    "cleanup": "node scripts/cleanup.js"
  },
  "repository": {},
  "author": "Josh Mante",
  "license": "MIT",
  "dependencies": {
    "@amberjs/core": "^1.0.9",
    "@amberjs/log": "^1.3.0",
    "awilix": "^4.2.2",
    "awilix-express": "^2.1.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.0",
    "del": "^5.1.0",
    "dotenv": "^8.1.0",
    "eslint": "^6.4.0",
    "express": "^4.17.1",
    "http-status": "^1.3.2",
    "js-yaml": "^3.13.1",
    "method-override": "^3.0.0",
    "serverless-http": "^2.3.0",
    "structure": "^1.8.0",
    "swagger-ui-express": "^4.1.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-change": "^2.1.2",
    "chance": "^1.1.0",
    "dirty-chai": "^2.0.1",
    "factory-girl": "^5.0.4",
    "listr": "^0.14.3",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "replace-in-file": "^4.1.3",
    "serverless-offline": "^5.11.0",
    "supertest": "^4.0.2",
    "supertest-as-promised": "^4.0.2"
  }
}
